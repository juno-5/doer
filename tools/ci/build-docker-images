#!/usr/bin/env bash
set -eux
cd "$(dirname "${BASH_SOURCE[0]}")"
docker build . --build-arg=BASE_IMAGE=ubuntu:22.04 --pull --tag=doer/ci:jammy
docker build . --build-arg=BASE_IMAGE=ubuntu:24.04 --pull --tag=doer/ci:noble
docker build . --build-arg=BASE_IMAGE=debian:12 --pull --tag=doer/ci:bookworm
docker build . --build-arg=BASE_IMAGE=debian:13 --pull --tag=doer/ci:trixie
