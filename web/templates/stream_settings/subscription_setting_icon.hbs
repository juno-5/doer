<div class="icon" style="background-color: {{color}}">
    <div class="flex">
        {{#if is_archived}}
        <i class="doer-icon doer-icon-archive fa-lg" aria-hidden="true"></i>
        {{else if invite_only}}
        <i class="doer-icon doer-icon-lock" aria-hidden="true"></i>
        {{else if is_web_public}}
        <i class="doer-icon doer-icon-globe fa-lg" aria-hidden="true"></i>
        {{else}}
        <span class="doer-icon doer-icon-hashtag"></span>
        {{/if}}
    </div>
</div>
